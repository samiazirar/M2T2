{
  "name": "M2T2 Dev",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "..",
    "args": {
      "CUDA_VERSION": "${localEnv:CUDA_VERSION:12.1.1}"
    }
  },
  "runArgs": [
    "--gpus", "all",
    "--shm-size=64g",
    "--ipc=host"
  ],
  "mounts": [
    "source=${localEnv:HOME}/.ssh,target=/root/.ssh,type=bind,readonly",
    "source=${localEnv:HOME}/.codex,target=/root/.codex,type=bind"
  ],
  "containerEnv": {
    "CODEX_HOME": "/root/.codex",
    "TORCH_CUDA_ARCH_LIST": "7.0;7.5;8.0;8.6;8.9;9.0",
    "CUDA_VERSION": "${localEnv:CUDA_VERSION:12.1.1}",
    "PYTORCH_CUDA_CHANNEL": "${localEnv:PYTORCH_CUDA_CHANNEL:}",
    "GIT_SSH_COMMAND": "ssh -o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null -o ControlMaster=no -F /dev/null"
  },
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind",
  "workspaceFolder": "/workspace",
  "forwardPorts": [7860],
  "postCreateCommand": "/bin/bash .devcontainer/post-create.sh",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter"
      ]
    }
  }
}
